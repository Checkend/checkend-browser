{
  "name": "@checkend/browser",
  "version": "0.1.0",
  "description": "Browser SDK for Checkend error monitoring",
  "author": "Simon Chiu <checkend@furvur.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/furvur/checkend-browser.git"
  },
  "homepage": "https://github.com/furvur/checkend-browser",
  "bugs": {
    "url": "https://github.com/furvur/checkend-browser/issues"
  },
  "keywords": [
    "error",
    "monitoring",
    "tracking",
    "checkend",
    "browser",
    "javascript",
    "typescript"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./testing": {
      "import": {
        "types": "./dist/testing.d.ts",
        "default": "./dist/testing.js"
      },
      "require": {
        "types": "./dist/testing.d.cts",
        "default": "./dist/testing.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src test --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepare": "scripts/install-hooks.sh",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "jsdom": "^27.4.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
